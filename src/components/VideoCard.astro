---
interface Props {
  id: string;
  title: string;
  name?: string;
}

const { id, title, name } = Astro.props;
---

<div class="video-card reveal" data-delay="100">
  <div class="video-container">
    <iframe
      src={`https://www.youtube.com/embed/${id}`}
      title={title}
      allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
      allowfullscreen
    ></iframe>
  </div>
  {name && (
    <div class="video-info">
      <h3>{name}</h3>
      <p>{title}</p>
    </div>
  )}
</div>

<style>
  .video-card {
    background: var(--surface);
    border: 1px solid var(--line);
    border-radius: var(--radius-md);
    overflow: hidden;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    box-shadow: var(--shadow-soft);
  }

  .video-card:hover {
    transform: translateY(-4px);
    box-shadow: var(--shadow-lg);
    border-color: var(--accent);
  }

  .video-container {
    position: relative;
    padding-bottom: 56.25%; /* 16:9 Aspect Ratio */
    height: 0;
    overflow: hidden;
    background: #000;
  }

  .video-container iframe {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    border: 0;
  }

  .video-info {
    padding: 1.5rem;
  }

  .video-info h3 {
    margin: 0;
    font-size: 1.25rem;
    color: var(--text-heading);
  }

  .video-info p {
    margin: 0.5rem 0 0;
    font-size: 0.95rem;
    color: var(--text-body);
    opacity: 0.8;
    font-style: italic;
  }
</style>
